<xua-book>
    <settings>
        <formats>
            <latex book-template="FILE.latex" destination="DIR/FILE.tex"  pdf="BOOL" />
            <html  home-template="FILE.html"  destination="DIR/FILE.html" pdf="BOOL" />
        </formats>
        <toc name="STRING" html-template="FILE.html" max-depth="INT" />
    </settings>
    <content
        html-template="FILE.html"
        latex-template="FILE.tex"
    >
        (<part
            name="STRING"
            html-template="TEMPLATE.html"
            latex-template="TEMPLATE.tex"
        >
            (<chapter
                name="NAME"
                src="SOURCE.xua"
                html-template="TEMPLATE.html"
                latex-template="TEMPLATE.tex"
            />)*
        </part>)*
        (<chapter
            name="NAME"
            src="SOURCE.xua"
            html-template="TEMPLATE.html"
            latex-template="TEMPLATE.tex"
        />)*
    </content>
</xua-book>



