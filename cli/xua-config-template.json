{
    "settings": {
        "database": {
            "sql": {
                "hostname": "localhost",
                "username": "root",
                "password": ""
            }
        },
        "server": {
            "php": {
                "destination-dir": "public_html",
                "quick": true,
                "resources": {
                    "public": "public",
                    "private": "private"
                }
            }
        },
        "marshal": {
            "dart": {
                "destination-dir": "marshal/dart",
                "quick": false,
                "services": "services/dart"
            }
        },
        "doc": {
            "latex": {
                "destination-dir": "latex",
                "quick": false,
                "default-template": "@default",
                "build-pdf": true
            },
            "html": {
                "destination-dir": "html",
                "quick": true,
                "default-template": "@default",
                "build-pdf": false,
                "resources": [
                    "public"
                ]
            }
        }
    }
}